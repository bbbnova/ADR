<div class="container">
    <h1>Add New Instruction</h1>
    <form id="instructionForm">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
        </div>

        <div class="form-group">
            <label for="editor">Content</label>
            <div id="editor"></div>
        </div>

        <button type="submit">Save Instruction</button>
    </form>
</div>

<script>
    const quill = new Quill('#editor', {
        theme: 'snow',
        modules: {
            toolbar: [
                ['bold', 'italic', 'underline'],
                ['link', 'image'],
                [{ 'list': 'ordered'}, { 'list': 'bullet' }]
            ]
        }
    });

    document.getElementById('instructionForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const title = document.getElementById('title').value;
        const content = quill.root.innerHTML;

        try {
            const response = await fetch('/api/instructions', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ title, content })
            });
            
            if (response.ok) {
                alert('Instruction saved successfully');
                document.getElementById('instructionForm').reset();
                quill.setContents([]);
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
</script>